<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/back_icon"
            android:paddingHorizontal="@dimen/_10sdp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Перевод"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:paddingLeft="@dimen/_15sdp"/>

        <ImageView
            android:id="@+id/info"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/info_icon"
            android:paddingHorizontal="@dimen/_12sdp"
            app:tint="@color/black" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/txt_otpravitel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправитель"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toBottomOf="@id/line1"
        android:paddingLeft="@dimen/_18sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        app:layout_constraintTop_toBottomOf="@id/txt_otpravitel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/_4sdp"
            app:cardMaxElevation="@dimen/_4sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_my_card_type"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/u"
                android:layout_gravity="center"
                android:background="#3F67A5"
                android:padding="@dimen/_7sdp"
                app:tint="@color/white" />


        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical">

        <TextView
            android:id="@+id/txt_my_card_numbr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8600 33** **** 2032"
            android:textSize="13sp"
            android:visibility="gone"
            android:gravity="bottom"
            android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_summa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Выберите карту"
                android:textSize="17sp"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <ImageView
            android:id="@+id/dialog_button_choose_card"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:src="@drawable/unfold"
            android:paddingVertical="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            app:tint="#CAC6C6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E4E4"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        android:layout_marginTop="@dimen/_15sdp"/>

    <ImageView
        android:id="@+id/img_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/line3"
        app:layout_constraintBottom_toBottomOf="@id/line3"
        app:layout_constraintRight_toRightOf="@id/line3"
        app:layout_constraintLeft_toLeftOf="@id/line3"
        android:src="@drawable/down_icon"
        android:background="@drawable/background_down_icon"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_10sdp"/>


    <TextView
        android:id="@+id/txt_poluchatel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отправитель"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/img_down"
        android:paddingStart="@dimen/_18sdp"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        app:layout_constraintTop_toBottomOf="@id/txt_poluchatel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/_4sdp"
            app:cardMaxElevation="@dimen/_4sdp"
            app:cardElevation="@dimen/_4sdp"
            android:layout_marginStart="@dimen/_20sdp"
            app:cardCornerRadius="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_card_type"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/cards_icon2"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:padding="@dimen/_7sdp"/>


        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edt_card_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="bottom"
                android:inputType="numberDecimal|numberSigned"
                android:background="@color/white"
                android:hint="Введите номер карты"
                android:maxLength="21"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="#959595">


            </EditText>
            <TextView
                android:id="@+id/other_owner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLength="21"
                android:gravity="center|start"
                android:paddingStart="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="14sp">


            </TextView>
        </androidx.appcompat.widget.LinearLayoutCompat>



        <ImageView
            android:id="@+id/dialog_last_cards"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/card_icon"
            android:layout_marginRight="@dimen/_10sdp"/>

        <ImageView
            android:id="@+id/scanner"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/scanner_icon"
            android:layout_marginEnd="@dimen/_20sdp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/summa_perevoda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сумма перевода"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/line4"
        android:paddingStart="@dimen/_18sdp"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintTop_toBottomOf="@id/summa_perevoda"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/_18sdp"
        android:background="@drawable/background_edit_text"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal">

        <com.cottacush.android.currencyedittext.CurrencyEditText
            android:id="@+id/edt_summa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="numberDecimal|numberSigned"
            android:hint="Введите сумму"
            android:textSize="16sp"
            android:ems="10"
            android:maxLength="16"
            android:paddingHorizontal="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textColorHint="#959595"
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/my_all_money"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:padding="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/magnet_money_icon"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


    <TextView
        android:id="@+id/nedostatochnosredstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/line5"
        android:text="Недостаточно средств"
        android:textColor="#F44336"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Минимальная сумма перевода без учета комиссии\n1 000,00"
        android:textColor="@color/priority4"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/line5"
        android:paddingHorizontal="@dimen/_16sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/kzachisleniyu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/error_message"
        android:text="@string/kzachisleniyu"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/summa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/kzachisleniyu"
        app:layout_constraintTop_toTopOf="@id/kzachisleniyu"
        app:layout_constraintBottom_toBottomOf="@id/kzachisleniyu"/>

    <TextView
        android:id="@+id/komissiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        app:layout_constraintLeft_toLeftOf="@id/kzachisleniyu"
        app:layout_constraintTop_toBottomOf="@id/summa"
        android:textSize="14sp"
        android:text="Комиссия: "/>


    <TextView
        android:id="@+id/summa_komissiya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/komissiya"
        app:layout_constraintTop_toTopOf="@id/komissiya"
        app:layout_constraintBottom_toBottomOf="@id/komissiya"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/background_dalee"
        android:gravity="center"
        android:text="Далее"
        android:enabled="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>