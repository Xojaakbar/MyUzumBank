<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_5sdp"
    android:background="#F5F6F8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/quit"
        android:layout_width="@dimen/_27sdp"
        android:layout_height="@dimen/_30sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/arrow_left"/>

    <ImageView
        android:id="@+id/exit_account"
        android:layout_width="@dimen/_29sdp"
        android:layout_height="@dimen/_29sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_6sdp"
        android:src="@drawable/exit_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите PIN-код"
        app:layout_constraintBottom_toTopOf="@+id/line"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/_22sdp"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@id/middle_guidline"
        android:layout_marginBottom="@dimen/_25sdp">

        <TextView
            android:id="@+id/first"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/background_pincode_pin"/>
        <TextView
            android:id="@+id/second"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/background_pincode_pin"/>
        <TextView
            android:id="@+id/third"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/background_pincode_pin"/>
        <TextView
            android:id="@+id/fourth"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_marginHorizontal="@dimen/_16sdp"
            android:background="@drawable/background_pincode_pin"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middle_guidline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.49"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/middle_guidline"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/background_pincode_constraint"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number1"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="1"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/number4"
                app:layout_constraintRight_toLeftOf="@+id/number2"/>

            <TextView
                android:id="@+id/number2"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="2"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number1"
                app:layout_constraintRight_toLeftOf="@+id/number3"
                app:layout_constraintBottom_toTopOf="@id/number5"/>

            <TextView
                android:id="@+id/number3"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="3"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/number6"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/number4"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="4"
                app:layout_constraintTop_toBottomOf="@id/number1"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toTopOf="@id/number7"
                app:layout_constraintRight_toLeftOf="@+id/number2"/>

            <TextView
                android:id="@+id/number5"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="5"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/number2"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number4"
                app:layout_constraintRight_toLeftOf="@+id/number6"
                app:layout_constraintBottom_toTopOf="@id/number8"/>

            <TextView
                android:id="@+id/number6"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="6"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/number3"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/number9"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/number7"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="7"
                app:layout_constraintTop_toBottomOf="@id/number4"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/number8"
                app:layout_constraintBottom_toTopOf="@id/finger_print"/>

            <TextView
                android:id="@+id/number8"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="8"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/number5"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number7"
                app:layout_constraintRight_toLeftOf="@+id/number9"
                app:layout_constraintBottom_toTopOf="@+id/zero"/>

            <TextView
                android:id="@+id/number9"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="9"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/number6"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/clear"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/finger_print"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:layout_constraintTop_toBottomOf="@id/number7"
                app:layout_constraintLeft_toLeftOf="parent"
                android:padding="@dimen/_20sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                app:layout_constraintRight_toLeftOf="@+id/number8"
                android:src="@drawable/baseline_fingerprint_24"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/zero"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:text="0"
                android:gravity="center"
                android:textSize="26sp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/number8"
                android:background="@drawable/background_pincode_numbers"
                app:layout_constraintLeft_toRightOf="@id/number7"
                app:layout_constraintRight_toLeftOf="@+id/number9"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/clear"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                app:layout_constraintTop_toBottomOf="@id/number9"
                app:layout_constraintLeft_toRightOf="@id/number8"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:padding="@dimen/_15sdp"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginVertical="@dimen/_5sdp"
                android:src="@drawable/backspace"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.constraintlayout.widget.ConstraintLayout>